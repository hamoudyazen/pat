<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minimal Footer with Newsletter</title>
    <style>
        /* Footer Styles */
        .footer {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: white;
            color: gray;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            font-size: 14px;
            z-index: 10; /* Keep it above most elements but below the overlay */
          border-top:1px solid #F5F5F5;
        }

        .newsletter-btn {
            background: none;
            border: none;
            color: gray;
            font-size: 14px;
            cursor: pointer;
        }

        .newsletter-btn:hover {
            text-decoration: underline;
        }

        /* Popup Overlay - Covers EVERYTHING including footer */
        .popup-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 9999; /* Ensures it covers the footer */
        }

        .popup-box {
            background: white;
            padding: 20px;
            text-align: center;
            width: 300px;
            border-radius: 5px;
            position: relative;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            z-index: 10000; /* Make sure the popup is above everything */
        }

        .popup-close {
            position: absolute;
            top: 10px;
            right: 10px;
            border: none;
            background: none;
            font-size: 18px;
            cursor: pointer;
        }

        .popup-title {
            font-size: 14px;
            color: black;
            margin-bottom: 15px;
        }

        .popup-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 14px;
            outline: none;
            margin-bottom: 10px;
        }

        .popup-input::placeholder {
            color: gray;
        }

        .subscribe-btn {
            width: 100%;
            padding: 10px;
            background: black;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.3s;
        }

        .subscribe-btn:hover {
            background: #222;
        }
    </style>
</head>
<body>

    <!-- Footer -->
    <div class="footer">
        <button class="newsletter-btn" onclick="openPopup()">Newsletter</button>
        <span>© 2025 STÜSSY</span>
    </div>

    <!-- Popup -->
    <div class="popup-overlay" id="popup">
        <div class="popup-box">
            <button class="popup-close" onclick="closePopup()">✕</button>
            <p class="popup-title">SUBSCRIBE FOR NEW PRODUCT ARRIVALS AND EARLY RELEASE INFO</p>
            <input type="email" class="popup-input" placeholder="Email">
            <button class="subscribe-btn">Subscribe</button>
        </div>
    </div>

    <script>
        function openPopup() {
            document.getElementById('popup').style.display = 'flex';
        }

        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }
    </script>

</body>
</html>
